@page
@model ResetPasswordModel
@{
    ViewBag.Title = "Restablecer Contraseña";
}

<h1>@ViewBag.Title</h1>
<h2>Porfavor ingresa tus datos.</h2>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <input type="hidden" asp-for="Input.Code" />
            <div class="form-floating mb-3">
                <input class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" asp-for="Input.Email" />
                <label class="form-label" asp-for="Input.Email"></label>
                <span class="text-danger" asp-validation-for="Input.Email"></span>
            </div>
            <div class="form-floating mb-3">
                <input class="form-control" autocomplete="new-password" aria-required="true" placeholder="Please enter your password." asp-for="Input.Password" />
                <label class="form-label" asp-for="Input.Password"></label>
                <span class="text-danger" asp-validation-for="Input.Password"></span>
            </div>
            <div class="form-floating mb-3">
                <input class="form-control" autocomplete="new-password" aria-required="true" placeholder="Please confirm your password." asp-for="Input.ConfirmPassword" />
                <label class="form-label" asp-for="Input.ConfirmPassword"></label>
                <span class="text-danger" asp-validation-for="Input.ConfirmPassword"></span>
            </div>
            <button type="submit" class="w-100 btn btn-secondary border border-light text-black">Reiniciar</button>
            <div class="text-danger" role="alert" asp-validation-summary="ModelOnly"></div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}