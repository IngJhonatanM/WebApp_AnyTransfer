@page
@model LogoutModel
@{
    ViewBag.Title = "Log out";
}

<header>
    <h1>@ViewBag.Title</h1>
    @{
        if (User.Identity?.IsAuthenticated ?? false)
        {
            <form class="form-inline" method="post" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/", new { area = "" })">
                <button class="nav-link btn btn-link text-dark" type="submit">Click here to Logout</button>
            </form>
        }
        else
        {
            <p>You have successfully logged out of the application.</p>
        }
    }
</header>