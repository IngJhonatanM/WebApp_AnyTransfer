@using Microsoft.AspNetCore.Identity
@using EDIBANK.Conf_Db_With_Entity
@using EDIBANK.Models.Users_EdiWeb
@inject RoleManager<IdentityRole> RoleManager
@inject AppDbContext AppDbContext
@model UserViewModel
@{
    ViewBag.Title = "Crear Usuario";
}

<meta name="viewport" content="width=device-width, initial-scale=1.0" />
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.3/font/bootstrap-icons.css">
<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
<link rel="stylesheet" href="~/css/_StylesDripManageUsers.css" />
<meta name="viewport" content="width=device-width, initial-scale=1.0" />

<br />

@* <h2 class="bg-body text-white fw-bolder">@ViewBag.Title</h2>*@
<br />

<form method="post" id="Formrcrtuser" asp-action="Create"
>
    <header>
         <h2>Crear Usuario</h2> 
        <div>Porfavor completar todos los campos de forma correcta.</div>
    </header>
    <!--Nombres -->
    <div class="form-group">
        <label class="control-label" asp-for="DisplayName"></label>
        <input class="form-control" asp-for="DisplayName" />
        <span class="text-danger" asp-validation-for="DisplayName"></span>
    </div>
    <!--Email -->
    <div class="form-group">
        <label class="control-label" asp-for="Email"></label>
        <input class="form-control" asp-for="Email" />
        <span class="text-danger" asp-validation-for="Email"></span>
    </div>
    <!--Contraseña -->
    <div class="form-group">
        <label class="control-label" asp-for="Password"></label>
        <input class="form-control" asp-for="Password" />
        <span class="text-danger" asp-validation-for="Password"></span>
    </div>
    <!-- Seleccionar un rol -->
    <div class="form-group">
        <label class="control-label" asp-for="RoleName"></label>
        <select class="form-select-sm" asp-for="RoleName" asp-items=@await RoleManager.Roles.SelectListAsync(Model.RoleName)></select>
    </div>
    <!-- Seleccionar un código edi -->
    <div class="form-group">
        <label class="control-label" asp-for="EDIId"></label>
        <select class="form-select-sm" asp-for="EDIId" asp-items=@await AppDbContext.EDIs.SelectListAsync(Model.EDIId)></select>
    </div>
    <br />
    <button class="btn btn-primary bi bi-person-fill-add" type="submit">&nbsp;Crear</button>
    <br />
    <div class="text-danger" asp-validation-summary="ModelOnly"></div>
</form>
<div id="Contenedor_Bottom_Back1">
    <a class="btn btn-secondary bi bi-box-arrow-left" asp-action="Index">&nbsp;Volver</a>
</div>